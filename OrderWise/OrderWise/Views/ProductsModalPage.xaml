<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OrderWise.Views.ProductsModalPage"
             Title="{Binding Title}"
             xmlns:local="clr-namespace:OrderWise.ViewModels"  
             xmlns:model="clr-namespace:OrderWise.Models">

    <StackLayout Margin="20,35,20,20">
        <Entry x:Name="productCodeEntry"
               Placeholder="Enter Product Code" />
        <Entry x:Name="productNameEntry"
               Placeholder="Enter Product Name" />
        
        <Button Text="Add Product"
                Clicked="OnAddProductButtonClicked" />
        <Button Text="Cancel"
                Clicked="OnCancelModalButtonClicked" />
    </StackLayout>
    
</ContentPage>
